/* pages/extend/article/article.wxss */
@import "../../../wxParse/wxParse.wxss";
page{
    background: #fff;
    margin-bottom: 100rpx;
}

.page.iphone{
    margin-bottom: 120rpx;
}
.img{
    width: 100%;
}
.title{
    font-size: 36rpx;
    line-height: 1.8;
    color: #333;
    margin: 25rpx 0 10rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}
.date{
    text-align: left;
    color: #AAA;
    font-size: 24rpx;
    line-height: 1.8;
    margin-bottom:20rpx;
}
.qh-title{
    font-size: 30rpx;
    padding-right: 10rpx;
    color:#646464;
}
.read{
    color: #717171;
    font-size: 20rpx;
    margin-bottom:10px;
    border: 1px solid #717171;
    padding: 5rpx 0rpx;
    border-radius: 20rpx;
    text-align: center;

}
.official-go-btn{
    width: 100%!important;
    text-align: center!important;
    border: 1px solid #717171!important;
    color: #717171!important;
    font-size: 24rpx!important;
    padding: 5rpx 10rpx!important;
    border-radius: 30rpx!important;
    font-weight: 400!important;

    
}
.official-go-btn.no{
    border: 1px solid #6a88ff!important;
    color: #6a88ff!important;
}
/* .read.no {
    border: 1px solid #6a88ff;
