/* pages/extend/articleList/articleList.wxss */
.van-tabs__scroll--line{ background: #f8f8f8!important}
.article{
    background: #f8f8f8
}
.article .van-tabs__line{
    background-color: #6B7EFF
        
}
.list{
    background: #f5f5f5;
}
.item{
   /* padding: 15px 0 ; */
    background: #fff;
    margin-bottom: 16rpx;
    padding-left: 15rpx;
    padding-right: 15rpx;
    padding-bottom: 2%;

}
.item .first{
    border-bottom: 1px solid rgba(0,0,0,.05);
}
.article-top{
    padding: 12px 0 0;
    /* border-bottom: 1px solid rgba(0,0,0,.05); */
    height: 100px;
    
}
.left-img{
    height: 59px;
    width: 72px;
}
.title{
    font-size: 14px;
    height: 44px;
    line-height:22px;
    overflow: hidden;
    color: #333;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    margin-top: 8px;

}
.sub{
    font-size: 20rpx;
    color: #aaa;
    /* margin-top: 5px; */
}
.sub .date,.sub .eye{
    display: inline-block;
}
.sub icon{
    font-size: 20px;
}
.sub .date{
    float: right;
}
.sub .eye,.share{
    float: left;
}
.sub text{
    color: #999;
}
.third .eye icon{
    margin-top: -16rpx;

}
.article-bottom{
    display: block;
    float: right;
    padding: 5px 0;
}

.noMore{
    font-size: 24rpx;
    color: #999;
    padding-top:20rpx;
    
}
.loading{
    margin: 10rpx auto 0;
}
/*添加文章按钮*/
.icon-fix-right{
    position: fixed;
    right: 15rpx;
    bottom: 30rpx;
    color: #6B7EFF;
    border-radius: 100%;
}
.icon-fix-right .icon-article{
   font-size: 64rpx;
}