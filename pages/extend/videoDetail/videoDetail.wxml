<view class="section tc page">
    <view class="video-wrapper">
      <view class="video">
        <txv-video class="txv-video" playerid="txv1_{{full_vedio}}" vid="{{full_vedio}}" autoplay="true"></txv-video>
      </view>
        <!-- <video id="myVideo" src="{{VideoUrl}}" binderror="videoErrorCallback" controls></video> -->
    </view>
 
  <view class="btn-area page__bd page__bd_spacing">
        <view class="weui-flex">
            <view class="weui-flex__item-3 title">{{vedio_title}}</view>
            <view class="weui-flex__item">
                <button data-id="1" class='share-btn1'  open-type="share"> 
                    <icon class="./iconfont/iconweixin:before wechart" ></icon>
                </button>
                <button class='share-btn1 ' send-message-title="{{vedio_title}}" send-message-img="{{vedio_abbr_image}}" show-message-card="true" send-message-path="/pages/extend/videoDetail/videoDetail?spread_id={{spread_vedio_id}}&user_id={{user_id}}&type=B"  open-type='contact' show-message-card plain>
                     <icon class="./iconfont/iconpengyouquan:before pyq" ></icon>
                </button>
                <!-- <van-button  bindtap="onShareAppMessage"  color="#7232dd" plain size="small" custom-class="video-btn">分享</van-button>  -->
            </view>
        </view>
        <view class="summary">
            <view>简介:</view>
            <import src="../../../wxParse/wxParse.wxml"/>
            <template is="wxParse" data="{{wxParseData:summary.nodes}}"/>
        </view>
   
  </view>
</view>
<auth is-hidden="{{isHidden}}" bind:afterAuth="afterAuth" url="../../../pages/activity/rule/rule"></auth>
<video src="" binderror="" hidden></video>