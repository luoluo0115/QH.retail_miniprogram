.myCard{
    background: #fff;
    border-radius: 25rpx;
    color: #333;
    padding: 25rpx;
    box-shadow: 0px 0px 3rpx 0rpx #ddd;
}
.userinfo-nickname {
     color: #0C30DF;
   
}
.wechart-btn icon{
    font-size: 68rpx;

}
.userinfo-wrapper{
  position: relative;
}
.userinfo-list .item {
    /* margin-top: 10rpx; */
}
.userinfo-list .item icon{
    position: relative;
    top: -5rpx;
}
.userinfo-list  .item icon ,.userinfo-list .item-text,.userinfo-list .item-zc,.item-wechart .score-icon-left,.item-wechart .item-text{
    display: inline-block;

}
.userinfo-list .item-text,.item-wechart .item-text{
   font-size: 24rpx;
    padding-left: 5rpx;
}
.item-zc{
    text-align: right;
    color: #0C30DF;
    position: absolute;
    right: 0;
    font-size: 24rpx;
    bottom: 10rpx;
    
}
.userContent{
    z-index: 7;
    top: -80px;
   
}
.share-text .van-cell__value{
    -webkit-flex: 3;
    flex: 3;
    text-align: left;
}
.user-list .title{
    font-size: 26rpx;
    color: #666;
    line-height: 80rpx;
    padding-left: 10rpx;

}
.user-list-wrapper{
    background-color: #fff;
    border-radius:20rpx;
    overflow: hidden;
}
.save-btn{
    width: 100%!important;
    background: #677CFB;
    color: #fff;
    margin: 40rpx auto;
    border-radius: 42rpx;
    text-align: center;

}
.form-box {
    width: 100%;
    background-color: #fff;
    margin-top: 20rpx;
  }
  
  .row-wrap {
    width: 690rpx;
    height: 88rpx;
    line-height: 88rpx;
    margin-left: 30rpx;
    border-bottom: 1rpx solid #eee;
    display: flex;
    font-size: 28rpx;
    /*justify-content: space-between;*/
  }
  
  .row-wrap .label {
    width: 160rpx;
    color: #000;
  }
  
  .row-wrap .label-right {
    flex: 1;
    height: 88rpx;
    line-height: 88rpx;
  }
  
  .row-wrap .label-right input {
    height: 100%;
    font-size: 28rpx;
    padding-right: 30rpx;
  }
  
  .row-wrap .right-box {
    margin-right: 30rpx;
  }
  
  .arrow-right {
    width: 15rpx;
    height: 24rpx;
  }
  
  
  .addr-details {
    height: auto;
    padding: 30rpx 0;
    margin-left: 30rpx;
    border-bottom: 1rpx solid #eee;
    display: flex;
    font-size: 28rpx;
  }
  
  .addr-details .label {
    margin: auto 0 auto 0;
    width: 160rpx;
    color: #333;
  }
  
  .addr-details textarea {
    box-sizing: border-box;
    width: 480rpx;
    overflow: scroll;
  }
  
  picker {
    min-width: 20rpx;
    height: 100%;
    margin-right: 20rpx;
  }
  
  .hui {
    color: #777;
  }
  .van-checkbox__icon-wrap {
    flex: none;
    top: 13px;
    left: 12px;
    position: relative;
    
}

.check-true{
  display: -webkit-flex;
  display: flex;
  overflow: hidden;
  -webkit-user-select: none;
  user-select: none;
}
