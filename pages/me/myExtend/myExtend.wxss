/*每周任务*/

.tab-bar .van-tabs__nav{
   background: #647bfe;
}
.van-hairline--top-bottom:after {
   border-width: 0!important;
    
}

.van-tab {
    min-width: 0;
    padding: 0 5px;
    font-size: 14px;
    line-height: 44px;
    color: #fff!important;
    text-align: center;
    cursor: pointer;
    box-sizing: border-box;
    -webkit-flex: 1;
    flex: 1;
    
}

.van-tab--active {
    color: #fff!important;
    font-size: 30rpx!important;
    
}

.van-tabs__line {
    /* transform: translateX(55.25px)!important;
    -webkit-transform: translateX(55.25px)!important; */
    width: auto!important;
    background-color: transparent!important;
    border-radius: 0!important;
    position: absolute;
    bottom: 0;
    left: 7%!important;
    z-index: 1;
    height: 3px;
    background-color: #fff;
    border-radius: 0!important;
    display: inline-block;
    width: 0;
    height: 0;
    margin-left: 2px;
    vertical-align: middle;
    border-bottom: 6px dashed;
    border-right: 6px solid transparent;
    border-left: 6px solid transparent;
    margin: 0 auto;
    background: #fff;
    color: #fff;
    text-align: center;
    
}
.week-list{
    font-size: 12px;
}
.week-list .week-item{
    padding: 30rpx 0;
    border-bottom:1px solid #f3f3f3
}
.left-img{
    padding-right: 25rpx;
}
.people-logo{
    width: 65rpx;
    height: 65rpx;
}
.people-text{
    font-size: 16rpx;
}
.week-list .week-item .left{
    color:#333;
    font-size: 24rpx;
    
}
.week-list .week-item .left.week-left{
    align-items: center;
    display: flex;
}
.week-list .week-item .left .title{
    display: block;
    color: #647bfe;
    font-size: 28rpx;
}
.week-list .week-item .right{
    text-align: right;
}
.week-list .week-item .right .btn{
    padding: 5rpx 12rpx;
    border-radius: 10rpx;
    background-color: #647bfe;
    color: #fff;
    width: 140rpx;
    font-size: 22rpx;
    text-align: center;
    margin-bottom:6rpx ;
    float: right;
    display: block;
    line-height: 1.5;
    
}
.week-list .week-item .right .btn.no-btn{
    background-color: #999;
}
.week-list .week-item .right .sub{
    color: #999;
    font-size: 22rpx;
    display: bolock;
    float: right

}
/*排行榜*/
.rank-list{
    font-size: 24rpx;
    color: #333;
    text-align: center;
}
.rank-header{
    color: #999;
    height: 80rpx;
    line-height: 80rpx;
}
.rank-item{
    height: 100rpx;
    line-height: 100rpx;
    border-top:1px solid #f3f3f3;
    color:#666;
    font-size: 22rpx;
}


.rank-avatar{
    overflow: hidden;
    width: 64rpx;
    height: 64rpx;
    border-radius: 50%;
    border: 1px solid #647bfe;
    margin:18rpx auto;
    position: relative;

}
.human{
    position: relative;
}

.human .human-minilogo{
    width: 84rpx;
    height: 25rpx;
    bottom: 7rpx;
    left: 18rpx;
    position: absolute;


}
.level2{
    background: #eee;
    color: #666;
}

.rank-item:hover,.rank-item:active{
    background: #647bfe;
    color: #fff;
    font-size:26rpx
}

.rank-item:hover .rank-avatar,.rank-item:active .rank-avatar{
    border: 1px solid #fff;
}
.rank-item .draw-tag{
    color:#647bfe !important;
}
.rank-item .draw-tag::after{
    border: 1px solid #647bfe;
    color: #647bfe;
}
.rank-item:hover .draw-tag,.rank-item:active .draw-tag{
    color: #fff !important;
}
.rank-item:hover .draw-tag::after,.rank-item:active .draw-tag::after{
    border: 1px solid #fff;
    color: #fff;
}

.rank-item .top-one{
    border-radius: 100%;
