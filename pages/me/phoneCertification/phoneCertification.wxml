
 <view class="page">
    <view class="page__bd">
         <van-cell-group>
            <van-field
            type="idcard"
              name="userPhone"
              label="手机号"
              placeholder="请输入手机号"
              left-icon="phone-o"
              border="{{ false }}"
              bindinput="phoneInput"
            />
          </van-cell-group>
        
          <van-cell-group>
            <van-field
              name="code"
              center
              clearable
              label="验证码"
              bindinput="codeInput"
              placeholder="请输入短信验证码"
              use-button-slot
              border="{{ false }}"
              left-icon="records"
              type="number"
            >
            <van-button slot="button" size="small"  custom-class="button"   bindtap="{{isClick?'':'getCode'}}"  color="#6823FB" disabled="{{isClick}}" > {{btntext}} </van-button>
            </van-field>
          </van-cell-group>
          <view class="page__bd_spacing">
              <view class="goBtn" bindtap='goTo' >认证</view>
          </view>
         
          
    </view>
   
       
 </view>
 <van-popup show="{{show}}" bind:close="onActivityClose" custom-class="pop-bg">
   <view class="activity-bg" bindtap="onActivityClose">
     <image class="" src="{{imgUrls}}" mode="widthFix" lazy-load="false" binderror="" bindload="">
     </image>
   </view>
 </van-popup>

